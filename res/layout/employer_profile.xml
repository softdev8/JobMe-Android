<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.search.jobme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg1"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:id="@+id/top_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="65dp"
	    android:layout_alignParentLeft="false"
	    android:layout_alignParentTop="false"
	    android:background="@color/title_bar_color" >

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:text="Employer Profile"
		    android:textColor="@color/white"
		    android:textSize="22sp" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/chat_back" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat"
            android:visibility="gone" />

    </RelativeLayout>

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/page_bg1" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	        <RelativeLayout
	            android:id="@+id/sub"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:orientation="vertical" >

	            <LinearLayout
	                android:id="@+id/top"
	                android:layout_width="match_parent"
	                android:layout_height="185dp"
	                android:background="@drawable/home_top_rounded_rectangle"
	                android:gravity="center_horizontal"
	                android:orientation="vertical" >
					
	                <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/user_picture"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
	                    android:layout_marginTop="10dp"
                        app:border="false"
                        app:border_color="@color/white_color"
                        app:border_width="1.0dip"
                        app:shadow="true" />
	                
	                <TextView
	                    android:id="@+id/txt_user_name"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="@color/text_color"
	                    android:textSize="17sp" />

	                <TextView
	                    android:id="@+id/TextView03"
	                    android:layout_width="fill_parent"
	                    android:layout_height="0.1dp"
	                    android:layout_marginTop="10dp"
	                    android:background="@color/text_bg_border_color" />

	                <LinearLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:orientation="horizontal" >

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="match_parent"
	                        android:layout_weight="0.4"
	                        android:gravity="center_vertical|center_horizontal"
	                        android:orientation="vertical" >

	                        <ImageView
	                            android:id="@+id/ImageView01"
	                            android:layout_width="wrap_content"
	                            android:layout_height="20dp"
	                            android:src="@drawable/suitcase" />

	                        <TextView
	                            android:id="@+id/txt_experience_year"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginTop="10dp"
	                            android:gravity="center_horizontal"
	                            android:text="123"
	                            android:textSize="11sp" />
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="match_parent"
	                        android:layout_weight="0.3"
	                        android:gravity="center_vertical|center_horizontal"
	                        android:orientation="vertical" >

	                        <ImageView
	                            android:id="@+id/imageView1"
	                            android:layout_width="wrap_content"
	                            android:layout_height="20dp"
	                            android:src="@drawable/location" />

	                        <TextView
	                            android:id="@+id/txt_location"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginTop="10dp"
	                            android:gravity="center_horizontal"
	                            android:maxLines="1"
	                            android:textSize="11sp" />
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="match_parent"
	                        android:layout_weight="0.4"
	                        android:gravity="center_vertical|center_horizontal"
	                        android:orientation="vertical" >

	                        <TextView
	                            android:id="@+id/ImageView02"
	                            android:layout_width="wrap_content"
	                            android:layout_height="20dp"
	                            android:text="LATEST ACTIVITY"
	                            android:textColor="@color/main_color"
	                            android:textSize="12sp" />

	                        <TextView
	                            android:id="@+id/txt_latest_activity"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginTop="10dp"
	                            android:gravity="center_horizontal"
	                            android:textSize="11sp" />
	                    </LinearLayout>
	                </LinearLayout>
	            </LinearLayout>

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_below="@id/top"
	                android:layout_marginTop="1dp"
	                android:orientation="vertical" >

	                <RelativeLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="60dp"
	                    android:background="@color/white" >

	                    <LinearLayout
	                        android:layout_width="fill_parent"
	                        android:layout_height="wrap_content"
	                        android:layout_centerVertical="true"
	                        android:orientation="vertical" >

	                        <TextView
	                            android:id="@+id/txt_headline"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginLeft="15dp"
	                            android:layout_marginTop="7dp"
	                            android:textColor="@color/text_color" />

	                        <TextView
	                            android:id="@+id/txt_company_name"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_marginLeft="15dp"
	                            android:textColor="@color/text_bg_border_color"
	                            android:textSize="15sp" />

	                    </LinearLayout>

	                    <ImageView
	                        android:id="@+id/company_picture"
	                        android:layout_width="100dp"
	                        android:layout_height="45dp"
	                        android:layout_alignParentRight="true"
	                        android:layout_centerVertical="true"
	                        android:layout_marginRight="10dp"
	                        android:scaleType="fitEnd" />

	                    <TextView
	                        android:id="@+id/no_company"
	                        android:layout_width="40dp"
	                        android:layout_height="40dp"
	                        android:layout_alignParentRight="true"
	                        android:layout_centerVertical="true"
	                        android:layout_marginRight="10dp"
	                        android:background="@drawable/background_rounded_rectangle6"
	                        android:gravity="center_vertical|center_horizontal"
	                        android:text="M"
	                        android:textColor="@color/white"
	                        android:textSize="20sp"
	                        android:textStyle="bold"
	                        android:visibility="gone" />
	                    
	                </RelativeLayout>

	                <TextView
	                    android:id="@+id/lblDescription"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginTop="12dp"
	                    android:text="COMPANY DESCRIPTION"
	                    android:textColor="@color/text_bg_border_color" />

	                <TextView
	                    android:id="@+id/txt_description"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginRight="15dp"
	                    android:layout_marginTop="7dp"
	                    android:textColor="@color/text_color"
	                    android:textSize="13sp" />

	                <TextView
	                    android:id="@+id/line1"
	                    android:layout_width="fill_parent"
	                    android:layout_height="0.1dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="10dp"
	                    android:background="@color/text_bg_border_color" />

	                <TextView
	                    android:id="@+id/lblExperience"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginTop="12dp"
	                    android:text="EXPERIENCE"
	                    android:textColor="@color/text_bg_border_color" />

	                <LinearLayout
	                    android:id="@+id/experience_layout"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginRight="15dp"
	                    android:layout_marginTop="7dp"
	                    android:orientation="vertical" >
	                </LinearLayout>

	                <TextView
	                    android:id="@+id/line2"
	                    android:layout_width="fill_parent"
	                    android:layout_height="0.1dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="10dp"
	                    android:background="@color/text_bg_border_color" />

	                <TextView
	                    android:id="@+id/lblEducation"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginTop="12dp"
	                    android:text="EDUCATION"
	                    android:textColor="@color/text_bg_border_color" />

	                <LinearLayout
	                    android:id="@+id/education_layout"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginRight="15dp"
	                    android:layout_marginTop="7dp"
	                    android:orientation="vertical" >
	                </LinearLayout>

	                <TextView
	                    android:id="@+id/line3"
	                    android:layout_width="fill_parent"
	                    android:layout_height="0.1dp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_marginTop="10dp"
	                    android:background="@color/text_bg_border_color" />

	                <TextView
	                    android:id="@+id/txt_skills"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginBottom="10dp"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginRight="15dp"
	                    android:layout_marginTop="10dp"
	                    android:textColor="@color/text_color1"
	                    android:textStyle="bold" />

	            </LinearLayout>

	        </RelativeLayout>

	    </LinearLayout>
	</ScrollView>
</LinearLayout>